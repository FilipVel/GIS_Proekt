@model IEnumerable<Praksa.MK_PROTECTEDAREAS_EEACDDAV15>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm())
{

    var list = new SelectList(new[]
           {
new { Name="Name"},
new { Name="Code"},
new { Name="ISO3"},
new { Name="Year"},
new { Name="Municipality"},
},
           "Name", "Name");

    <b>Search By:</b>

    @Html.DropDownList("searchBy", list, new { @class = "form-control" })


    <b>Search Parameter:</b>
    @Html.TextBox("request", null, new { @class = "form-control" })

    <button type="submit" class="btn">Search</button>
    <br />








}
<br />
<table class="table" id="ta" class="display" style="width:100%">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SITE_CODE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PARENT_ISO)
