                    @Html.DisplayFor(modelItem => item.YEAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESIG_ABBR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESIGNATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ODESIGNATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IUCNCAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CDDA_disse)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MUNICIPALITY)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OBJECTID })
                    @Html.ActionLink("Details", "Details", new { id = item.OBJECTID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.OBJECTID })
                    @Html.ActionLink("Shape", "Shape", new { id = item.OBJECTID })
                </td>
            </tr>
        }
    </tbody>
</table>


