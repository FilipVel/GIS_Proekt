            <th>
                @Html.DisplayNameFor(model => model.DESIGNATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ODESIGNATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IUCNCAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CDDA_disse)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MUNICIPALITY)
            </th>
            <th>Actions</th>
        </tr>
    </thread>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SITE_CODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PARENT_ISO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISO3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SITE_NAME)
